<Window x:Class="LogDogGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogDogGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="286" Width="726">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Path Stretch="Uniform" 
              Margin="0,5,0,0" 
              VerticalAlignment="Top" 
              Fill="Black"
              Height="25" Width="25" 
              Data="{StaticResource ethersphereIcon}"  />
        
        <ListBox Grid.Column="0" x:Name="sidebar" Margin="0, 50, 0, 50" BorderThickness="0">
            <local:NavButton Margin="3" Padding="6" Icon="{StaticResource playButton}"/>
            <local:NavButton Margin="3" Padding="6" Icon="{StaticResource settingsButton}"/>
            <local:NavButton Margin="3" Padding="6" Icon="{StaticResource moonButton}"/>
        </ListBox>

        <!--<Frame Grid.Column="1" x:Name="navframe" Background="#e9ecef"/>-->

    </Grid>
</Window>
